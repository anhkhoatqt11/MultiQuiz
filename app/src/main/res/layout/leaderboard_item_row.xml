<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/lobby_card_backgroundcolor">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ParticipantAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_useravatar"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/ParticipantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_demo"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_toEndOf="@id/ParticipantAvatar"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/ParticipantPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="30"
            android:textColor="@android:color/white"
            android:textAppearance="?attr/textAppearanceTitleMedium"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>